<mvc:View controllerName="logaligroup.gestionempleados.controller.Menu"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m">
    <Page id="page" title="{i18n>tituloMenu}">
        <content>
            <Panel headerText="{i18n>empleados}">
                <GenericTile headerImage="sap-icon://add-employee" class="sapUiSmallMargin" press="irACrearEmpleado">
                    <TileContent footer="{i18n>crearEmpleado}" />
                </GenericTile>

                <GenericTile headerImage="sap-icon://employee-lookup" class="sapUiSmallMargin" press="irAVerEmpleados">
                    <TileContent footer="{i18n>verEmpleados}" />
                </GenericTile>
            </Panel>

            <Panel headerText="{i18n>pedidos}">
                <GenericTile headerImage="sap-icon://signature" class="sapUiSmallMargin" press="irAFirmarPedido">
                    <TileContent footer="{i18n>firmarPedido}" />
                </GenericTile>
            </Panel>
        </content>
    </Page>
</mvc:View>
